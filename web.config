<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <system.webServer>
        <!-- Habilitar la navegaci贸n por directorios -->
        <directoryBrowse enabled="true" />
        
        <!-- Configuraci贸n de tipos MIME -->
        <staticContent>
            <mimeMap fileExtension=".pkg" mimeType="application/x-newton-compatible-pkg" />
            <mimeMap fileExtension=".xvc" mimeType="application/x-newton-compatible-xvc" />
            <mimeMap fileExtension=".nsp" mimeType="application/x-newton-compatible-nsp" />
            <mimeMap fileExtension=".log" mimeType="text/plain" /> <!-- Nuevo tipo MIME para archivos .log -->
        </staticContent>
        
        <!-- Configuraci贸n de seguridad -->
        <security>
            <requestFiltering allowDoubleEscaping="true" />
        </security>
    </system.webServer>
    
    <!-- Configuraci贸n de identidad -->
    <system.web>
        <identity impersonate="true" />
    </system.web>
</configuration>